{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "Quantity.schema.json",
    "title": "Quantity",
    "definitions": {
        "Quantity": {
            "$id": "#Quantity",
            "type": "object",
            "allOf": [
                {
                    "properties": {
                        "amount": {
                            "type": "number",
                            "format": "float"
                        },
                        "units": {
                            "type": "string"
                        }
                    }
                },
                {
                    "$ref": "CommonComponents.schema.json#polymorphicPattern"
                }
            ]
        }
    }
}
